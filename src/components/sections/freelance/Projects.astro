const projects = [
  {
    img: 'minisfha.webp',
    title: 'Minis FHA',
    tags: ['Multipagina', 'Login', 'Registro', 'Dashboard'],
    link: 'https://minis-fha.vercel.app',
    github: 'https://github.com/V1CMA-V/minis-fha',
  },
  {
    img: 'barberia.webp',
    title: 'Barbería',
    tags: ['Landing page', 'Analytics', 'SEO'],
    link: 'https://barberiavic.vercel.app',
    github: 'https://github.com/V1CMA-V/Barberias',
  },
  {
    img: 'freelance.webp',
    title: 'Portafolio',
    tags: ['Portafolio', 'Astro', 'TailwindCSS', 'SEO'],
    link: 'https://vicma.vercel.app',
    github: 'https://github.com/V1CMA-V/vicma',
  },
  {
    img: 'cv.webp',
