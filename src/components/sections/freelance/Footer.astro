---
import Logo from '@/components/Logo.astro'
---

<footer class='w-full bg-white/5 backdrop-blur-lg text-white mt-20'>
  <!-- Contenido principal -->
  <div
    class='max-w-6xl mx-auto px-6 py-12 flex flex-col md:flex-row justify-between items-center gap-6 text-sm text-white/80'
  >
    <!-- Branding -->
    <div class='flex items-center gap-3 text-white'>
      <Logo class='w-16 h-16' />
      <div class='flex flex-col'>
        <strong class='text-lg'>Víctor Martínez</strong>
        <span class='text-xs text-white/60'>Desarrollador Web Freelance</span>
      </div>
    </div>

    <!-- Redes sociales -->
    <div class='flex gap-4'>
      <a
        href='https://github.com/V1CMA-V'
        target='_blank'
        rel='noopener noreferrer'
        aria-label='GitHub'
        class='hover:text-accent transition-colors'
      >
        <svg class='w-5 h-5' fill='currentColor' viewBox='0 0 24 24'
          ><path
            d='M12 .5C5.37.5 0 5.87 0 12.5c0 5.3 3.438 9.8 8.205 11.385.6.113.82-.26.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61-.546-1.385-1.334-1.754-1.334-1.754-1.09-.745.084-.73.084-.73 1.205.085 1.84 1.237 1.84 1.237 1.07 1.832 2.807 1.303 3.492.996.108-.775.42-1.305.762-1.605-2.665-.3-5.467-1.333-5.467-5.932 0-1.31.468-2.38 1.236-3.22-.124-.303-.536-1.523.117-3.176 0 0 1.008-.322 3.3 1.23a11.55 11.55 0 0 1 3-.404c1.02.005 2.045.14 3 .404 2.29-1.552 3.297-1.23 3.297-1.23.654 1.653.242 2.873.118 3.176.77.84 1.236 1.91 1.236 3.22 0 4.61-2.807 5.63-5.48 5.922.43.37.823 1.102.823 2.222 0 1.604-.015 2.898-.015 3.292 0 .32.218.694.825.576C20.565 22.297 24 17.8 24 12.5 24 5.87 18.63.5 12 .5z'
          ></path></svg
        >
      </a>

      <a
        href='https://linkedin.com/in/v1cma'
        target='_blank'
        rel='noopener noreferrer'
        aria-label='LinkedIn'
        class='hover:text-accent transition-colors'
      >
        <svg class='w-5 h-5' fill='currentColor' viewBox='0 0 24 24'
          ><path
            d='M4.98 3.5C3.33 3.5 2 4.82 2 6.48c0 1.66 1.31 2.98 2.98 2.98 1.66 0 2.98-1.32 2.98-2.98A2.98 2.98 0 0 0 4.98 3.5zM2.4 8.93h5.16V21H2.4V8.93zM9.34 8.93h4.93v1.67h.07c.69-1.3 2.36-2.67 4.86-2.67 5.2 0 6.16 3.42 6.16 7.86V21h-5.16v-6.41c0-1.53-.03-3.49-2.13-3.49-2.13 0-2.46 1.66-2.46 3.38V21H9.34V8.93z'
          ></path></svg
        >
      </a>
    </div>

    <!-- Navegación -->
    <nav class='grid grid-cols-2 gap-6 text-sm font-medium'>
      <a href='#hero' class='hover:text-accent transition-colors'>Inicio</a>
      <a href='#services' class='hover:text-accent transition-colors'>Servicios</a>
      <a href='#projects' class='hover:text-accent transition-colors'>Proyectos</a>
      <a href='#prices' class='hover:text-accent transition-colors'>Precios</a>
      <a href='#faq' class='hover:text-accent transition-colors'>Preguntas</a>
      <a href='#contact' class='hover:text-accent transition-colors'>Contacto</a>
    </nav>
  </div>

  <!-- Línea y derechos -->
  <div class='border-t border-white/10 text-center text-xs text-white/50 py-4'>
    &copy; {new Date().getFullYear()} Víctor Martínez. Todos los derechos reservados.
  </div>
</footer>

<style>
  footer {
    animation: come-cards linear both;
    animation-timeline: view();
    animation-range: entry 0% cover 10%;
  }
</style>
