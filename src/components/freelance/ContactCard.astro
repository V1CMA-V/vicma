---
interface Props {
  id: string
  title: string
  highlight?: boolean
}

const { id, title, highlight = false } = Astro.props
---

<section
  id={id}
  class={`flex flex-col justify-between gap-4 p-6 min-h-[200px] text-white text-left bg-white/5 backdrop-blur-xl border rounded-2xl transition-transform duration-300 hover:scale-[1.01] ${highlight ? 'md:col-span-2 row-span-2 border-accent' : 'border-white/10'}`}
>
  <h3 class='text-2xl font-bold text-accent mb-2'>{title}</h3>
  <div class='flex flex-col gap-4'>
    <slot />
  </div>
</section>

<style>
  #center {
    animation: come-cards linear both;
    animation-timeline: view();
    animation-range: entry 20% cover 40%;
  }

  #left {
    animation: expands-cards linear both;
    animation-timeline: view();
    animation-range: entry 20% cover 40%;
  }

  #right {
    animation: expands-cards linear both;
    animation-timeline: view();
    animation-range: entry 20% cover 40%;
  }
</style>
